[Unit]
Description=CasaOS Docker Compose Service
Requires=docker.service
After=docker.service

[Service]
Type=oneshot
WorkingDirectory=/home/snowfall/workspace/docker-casaos
ExecStart=/usr/bin/docker compose up -d
ExecStop=/usr/bin/docker compose down
RemainAfterExit=yes
TimeoutStartSec=0

# Pastikan environment-nya cocok
User=snowfall
Group=snowfall

# Restart policy (optional, berguna jika docker-compose gagal start)
Restart=on-failure
RestartSec=10s

[Install]
WantedBy=multi-user.target
